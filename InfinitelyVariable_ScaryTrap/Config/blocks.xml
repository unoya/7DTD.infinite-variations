<configs>
	<append xpath="/blocks">
		<!-- 鐵刺球 -->
		<block name="ivScaryTrapSpikeBall">
			<property name="CreativeMode" value="Player"/>
			<property name="DescriptionKey" value="ivScaryTrapSpikeBallDesc"/>
			<property name="CustomIcon" value="ivScaryTrapSpikeBall"/>
			<property name="Class" value="TrunkTip"/>
			<property name="BlockTag" value="Spike"/>
			<property name="MaxDamage" value="660"/>
			<property name="Damage" value="80"/>
			<property name="Damage_received" value="2"/>
			<property name="Material" value="MtrapSpikesIron"/>
			<property name="DisplayType" value="blockHardened"/>
			<property name="IsTerrainDecoration" value="true"/>
			<property name="PlaceAsRandomRotation" value="true"/>
			<property name="SellableToTrader" value="false"/>
			<property name="CanPickup" value="true"/>
			<property name="StabilitySupport" value="false"/>
			<property name="ImposterDontBlock" value="false"/>
			<property name="Collide" value="movement,melee"/>
			<property name="LightOpacity" value="6"/>
			<property name="MultiBlockDim" value="1,1,1"/>
			<property name="Shape" value="ModelEntity"/>
			<property name="Model" value="#@modfolder:Resources/scarytrap?trap_spiked_ball"/>
			<property class="RepairItems">
				<property name="resourceForgedIron" value="1"/>
			</property>
			<property name="Group" value="Tools/Traps"/>
			<property name="Stacknumber" value="30000"/>
			<property name="CustomUpgradeSound" value="place_block_metal"/>
			<drop event="Destroy" name="resourceScrapIron" count="30,50"/>
			<drop event="Fall"  name="resourceScrapIron" count="10,30"/>
			<property name="FilterTags" value="MC_building,SC_traps"/>
			<property name="SortOrder1" value="70g0"/>
		</block>
		<!-- 鋸馬 -->
		<block name="ivScaryTrapSawHorse">
			<property name="CreativeMode" value="Player"/>
			<property name="DescriptionKey" value="ivScaryTrapSawHorseDesc"/>
			<property name="CustomIcon" value="ivScaryTrapSawHorse"/>
			<property name="Class" value="TrunkTip"/>
			<property name="BlockTag" value="Spike"/>
			<property name="MaxDamage" value="840"/>
			<property name="Damage" value="120"/>
			<property name="Damage_received" value="5"/>
			<property name="Material" value="MtrapSpikesIron"/>
			<property name="DisplayType" value="blockHardened"/>
			<property name="IsTerrainDecoration" value="true"/>
			<property name="PlaceAsRandomRotation" value="false"/>
			<property name="OnlySimpleRotations" value="true"/>
			<property name="SellableToTrader" value="false"/>
			<property name="StabilitySupport" value="true"/>
			<property name="ImposterDontBlock" value="false"/>
			<property name="ImposterExclude" value="true"/>
			<property name="Collide" value="movement,melee"/>
			<property name="LightOpacity" value="6"/>
			<property name="MultiBlockDim" value="1,3,1"/>
			<property name="Shape" value="ModelEntity"/>
			<property name="Model" value="#@modfolder:Resources/scarytrap?trap_saw_horse"/>
			<property class="RepairItems">
				<property name="resourceForgedIron" value="2"/>
			</property>
			<property name="Group" value="Tools/Traps"/>
			<property name="Stacknumber" value="30000"/>
			<property name="CustomUpgradeSound" value="place_block_metal"/>
			<drop event="Destroy" name="resourceScrapIron" count="50,100"/>
			<drop event="Fall"  name="resourceScrapIron" count="20,40"/>
			<property name="FilterTags" value="MC_building,SC_traps"/>
			<property name="SortOrder1" value="70g0"/>
		</block>
	</append>
</configs>